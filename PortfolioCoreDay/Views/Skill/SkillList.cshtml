@model List<Skill>


@{
    ViewData["Title"] = "SkillList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Skill List Page</h1>


<table class="table table-bordered">

    <tr>
        <td>############</td>
        <td>Name</td>
        <td>Value</td>
        <td>Edit</td>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SkillID</td>
            <td>@item.SkillName</td>
            <td>@item.SkillValue</td>
            
            <td>
                <a href="/Skill/DeleteSkill/@item.SkillID" class="btn btn-outline-dark">Delete</a>
                <a href="/Skill/UpdateSkill/@item.SkillID" class="btn btn-outline-primary">Update</a>
            </td>

        </tr>
    }

</table>
<a href="/Skill/CreateSkill" class="btn btn-outline-info">Add Skill</a>