@model List<Contact>

@{
    ViewData["Title"] = "Contact List";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Contact List</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Contact ID</th>
            <th>Main Title</th>
            <th>Address Title</th>
            <th>Address</th>
            <th>Phone Title</th>
            <th>Phone</th>
            <th>Email Title</th>
            <th>Email </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ContactId</td>
                <td>@item.MainTitle</td>
                <td>@item.AddressTitle</td>
                <td>@item.Address</td>
                <td>@item.PhoneTitle</td>
                <td>@item.Phone</td>
                <td>@item.EmailTitle</td>
                <td>@item.Email</td>
                <td>
                    <a href="/AdminContact/UpdateContact/@item.ContactId" class="btn btn-outline-primary">Update</a>
                    <a href="/AdminContact/DeleteContact/@item.ContactId" class="btn btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/AdminContact/CreateContact" class="btn btn-outline-info">Add Contact</a>
