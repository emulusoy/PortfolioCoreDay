@model List<Service>

@{
    ViewData["Title"] = "ServiceList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<h1>Service List</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Service ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ServiceID</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.Status</td>
                <td>
                    <a href="/AdminService/UpdateService/@item.ServiceID" class="btn btn-outline-primary">Update</a>
                    <a href="/AdminService/DeleteService/@item.ServiceID" class="btn btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/AdminService/CreateService" class="btn btn-outline-info">Add Service</a>

