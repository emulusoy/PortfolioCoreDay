@model Contact

@{
    ViewData["Title"] = "Update Contact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Update Contact Page</h1>

<form method="post">
    <input type="hidden" asp-for="ContactId" />

    <div class="form-group">
        <label for="MainTitle">Main Title</label>
        <input type="text" asp-for="MainTitle" class="form-control" style="border:dotted 1px" />
    </div>
    <div class="form-group">
        <label for="AddressTitle">Address Title</label>
        <input type="text" asp-for="AddressTitle" class="form-control" style="border:dotted 1px" />
    </div>
    <div class="form-group">
        <label for="Address">Address</label>
        <input type="text" asp-for="Address" class="form-control" style="border:dotted 1px" />
    </div>
    <div class="form-group">
        <label for="PhoneTitle">Phone Title</label>
        <input type="text" asp-for="PhoneTitle" class="form-control" style="border:dotted 1px" />
    </div>
    <div class="form-group">
        <label for="Phone">Phone</label>
        <input type="text" asp-for="Phone" class="form-control" style="border:dotted 1px" />
    </div>
    <div class="form-group">
        <label for="EmailTitle">Email Title</label>
        <input type="text" asp-for="EmailTitle" class="form-control" style="border:dotted 1px" />
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" asp-for="Email" class="form-control" style="border:dotted 1px" />
    </div>
    <div class="form-group">
        <label for="MapUrl">Map URL</label>
        <input type="text" asp-for="MapUrl" class="form-control" style="border:dotted 1px" />
    </div>

    <button type="submit" class="btn btn-dark">Update Contact</button>
</form>
