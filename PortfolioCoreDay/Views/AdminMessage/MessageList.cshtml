@model List<Message>

    
@{
    ViewData["Title"] = "MessageList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<h1>Message List</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <td>Message ID</td>
            <td>Name Surname</td>
            <td>Email</td>
            <td>Subject</td>
            <td>Message Detail</td>
            <td>Send Date</td>
            <td>Is Read</td>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MessageID</td>
                <td>@item.NameSurname</td>
                <td>@item.Email</td>
                <td>@item.Subject</td>
                <td>@item.MessageDetail</td>
                <td>@item.SendDate</td>
                <td>@item.IsRead</td>
                <td>
                    <a href="/AdminMessage/UpdateMessage/@item.MessageID" class="btn btn-outline-primary">Update</a>
                    <a href="/AdminMessage/DeleteMessage/@item.MessageID" class="btn btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/AdminMessage/CreateMessage" class="btn btn-outline-info">Add Message</a>