@model Message
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
    @await Component.InvokeAsync("_Head")
<body class="index-page">

    @await Component.InvokeAsync("_Sidebar")
    <main class="main">

        @await Component.InvokeAsync("_Slider")
        <!-- About Section -->
        @await Component.InvokeAsync("_DefaultAboutPartial")
       <!-- /About Section -->
        <!-- Stats Section -->
        @await Component.InvokeAsync("_DefaultStatsPartial")
        
        <!-- /Stats Section -->
        <!-- Skills Section -->
        @await Component.InvokeAsync("_DefaultSkillsPartial")
      <!-- /Skills Section -->
        <!-- Resume Section -->
        <section id="resume" class="resume section">

            <!-- Section Title -->
            <div class="container section-title" data-aos="fade-up">
                <h2>Resume</h2>
                <p>Magnam dolores commodi suscipit. Necessitatibus eius consequatur ex aliquid fuga eum quidem. Sit sint consectetur velit. Quisquam quos quisquam cupiditate. Et nemo qui impedit suscipit alias ea. Quia fugiat sit in iste officiis commodi quidem hic quas.</p>
            </div><!-- End Section Title -->

            <div class="container">

                <div class="row">

                    @await Component.InvokeAsync("_EducationPartial")
                    @await Component.InvokeAsync("_ExperiencePartial")
                  

                </div>

            </div>

        </section><!-- /Resume Section -->
        @await Component.InvokeAsync("_DefaultPortfolioPartial")
        <!-- Services Section -->
        @await Component.InvokeAsync("_DefaultServicePartial")
        <!-- /Services Section -->
        <!-- Testimonials Section -->
        @await Component.InvokeAsync("_DefaultTestimonialPartial")
        <!-- Contact Section -->
        <section id="contact" class="contact section">

            <!-- Section Title -->
            <div class="container section-title" data-aos="fade-up">
                <h2>Contact</h2>
                <p>Necessitatibus eius consequatur ex aliquid fuga eum quidem sint consectetur velit</p>
            </div><!-- End Section Title -->

            <div class="container" data-aos="fade-up" data-aos-delay="100">

                <div class="row gy-4">
                    @await Component.InvokeAsync("_DefaultContactPartial")
                    
                    @* @await Component.InvokeAsync("_DefaultMessagePartial") *@
               <div class="col-lg-7">
     <form asp-controller="Message" asp-action="SendMessage" method="post" @* class="php-email-form" *@>
        <div class="row gy-4">

            <div class="col-md-6">
                <label>Your Name</label>
                <input type="text" name="NameSurname" class="form-control" required />
            </div>

            <div class="col-md-6">
                <label>Your Email</label>
                <input type="email" name="Email" class="form-control" required />
            </div>

            <div class="col-md-12">
                <label>Subject</label>
                <input type="text" name="Subject" class="form-control" required />
            </div>

            <div class="col-md-12">
                <label>Message</label>
                <textarea name="MessageDetail" rows="10" class="form-control" required></textarea>
            </div>

            <div class="col-md-12 text-center">
                <button type="submit" class="btn btn-o">Send Message</button>
            </div>

        </div>
    </form>
</div>
             <!-- End Contact Form -->

                </div>

            </div>

        </section><!-- /Contact Section -->

    </main>

    <footer id="footer" class="footer position-relative light-background">

        <div class="container">
            <div class="copyright text-center ">
                <p>© <span>Copyright</span> <strong class="px-1 sitename">iPortfolio</strong> <span>All Rights Reserved</span></p>
            </div>
        </div>

    </footer>

    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Preloader -->
    <div id="preloader"></div>

    <!-- Vendor JS Files -->
    <script src="/port/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/port/assets/vendor/php-email-form/validate.js"></script>
    <script src="/port/assets/vendor/aos/aos.js"></script>
    <script src="/port/assets/vendor/typed.js/typed.umd.js"></script>
    <script src="/port/assets/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="/port/assets/vendor/waypoints/noframework.waypoints.js"></script>
    <script src="/port/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="/port/assets/vendor/imagesloaded/imagesloaded.pkgd.min.js"></script>
    <script src="/port/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="/port/assets/vendor/swiper/swiper-bundle.min.js"></script>

    <!-- Main JS File -->
    <script src="/port/assets/js/main.js"></script>
   
</body>

</html>
