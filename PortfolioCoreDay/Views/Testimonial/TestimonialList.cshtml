@model List<PortfolioCoreDay.Entities.Testimonial>
@{
    ViewData["Title"] = "TestimonialList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Testimonial  List  Page</h1>


<table class="table table-bordered"> 

<tr> 
    <td>############</td>
    <td>Name and Surname</td>
    <td>Title</td>
    <td>Description</td>

</tr> 

@foreach (var item in Model) 
{ 
<tr>

    <td>@item.TestimonialID</td>
    <td>@item.NameSurname</td>
    <td>@item.Title</td> 
    <td>@item.Description</td>
    <td>

                <a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn btn-outline-dark">Delete</a>
                <a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-outline-primary">Update</a>
      
        
    </td>

 </tr>
}
   
</table>
<a href="/Testimonial/CreateTestimonial" class="btn btn-outline-info">Add</a>