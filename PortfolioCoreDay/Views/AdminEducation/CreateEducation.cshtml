@model Education

@{
    ViewData["Title"] = "CreateEducation";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<h1>Create Education</h1>

<form method="post">
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" id="Title" name="Title" class="form-control" asp-for="Title" required style="border: 1px solid black;" />
    </div>

    <div class="form-group">
        <label for="University">University</label>
        <input type="text" id="University" name="University" class="form-control" asp-for="University" required style="border: 1px solid black;" />
    </div>

    <div class="form-group">
        <label for="Departmant">Department</label>
        <input type="text" id="Departmant" name="Departmant" class="form-control" asp-for="Departmant" required style="border: 1px solid black;" />
    </div>

    <div class="form-group">
        <label for="EducationDate">Education Date</label>
        <input type="date" id="EducationDate" name="EducationDate" class="form-control" asp-for="EducationDate" required style="border: 1px solid black;" />
    </div>

    <button class="btn btn-dark">Add Education</button>
</form>

