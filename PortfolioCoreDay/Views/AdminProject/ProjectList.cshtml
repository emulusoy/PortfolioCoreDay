@model List<Portfolio>
@{
    ViewData["Title"] = "ProjectList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<h2>All Projects Here</h2>
<div style="display: flex; flex-wrap: wrap; gap: 10px; padding: 10px; background-color: #f8f9fa;">
    @foreach (var item in Model)
    {
        <div style="position: relative; width: 32%; overflow: hidden; border-radius: 5px;">
            <img src="@item.ImageUrl" alt="Card Image" style="width: 100%; height: 300px; object-fit: cover;">
            <div style="position: absolute; bottom: 10px; left: 10px; color: black; font:bold">
                <h5>@item.Title</h5>
                <p style="margin: 5px 0;">@item.Description</p>
                <small>@item.GithubUrl</small>
            </div>
        </div>
    }
</div>
