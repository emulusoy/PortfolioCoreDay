@model Service

@{
    ViewData["Title"] = "CreateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<h1>Create Service Page</h1>

<form method="post">
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" asp-for="Title" class="form-control" style="border:dotted 1px" />
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <textarea asp-for="Description" class="form-control" style="border:dotted 1px"></textarea>
    </div>
    <div class="form-group">
        <label for="Status">Status</label>
        <select asp-for="Status" class="form-control">
            <option value="Active">Active</option>
            <option value="Inactive">Inactive</option>
        </select>
    </div>

    <button type="submit" class="btn btn-dark">Add Service</button>
</form>


